<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.syncro</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="12"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="AfipSyncro" string="AfipSyncro" data-key="afip_syncro" >
                    <h2>Afip Syncro Different Triggers</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-24 col-md-6 o_setting_box">

                            <div class="o_setting_left_pane">
                                    <field name="different_name"/>
                                </div>
                                <div class="o_setting_right_pane">
                                        <label for="different_name"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="different_estado_padron"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="different_estado_padron"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="different_state_id"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="different_state_id"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="different_street"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="different_street"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="different_empleador_padron"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="different_empleador_padron"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                        <field name="different_imp_ganancias_padron"/>
                                </div>
                                <div class="o_setting_right_pane">
                                        <label for="different_imp_ganancias_padron"/>
                                </div>
                            </div>
                        
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                        
                                        <field name="different_imp_iva_padron"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                            <label for="different_imp_iva_padron"/>
                                    </div>
                                
                        </div>
                        
                    </div>
                   
                </div>
            </xpath>
        </field>
    </record>

    
</odoo>
